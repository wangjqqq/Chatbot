<script type="text/javascript">
  $("#msgSendBtn").on('click', function (){
    if ($("#message_body").val() == ""){
      return
    }
    if ($("#chat_first_user").val() == "robot@test.com" || $("#chat_second_user").val() == "robot@test.com" ){
      bodymsg = $("#message_body").val();
      targeturl = "http://openapi.tuling123.com/openapi/api/v2";
      $.ajax({
        type: 'POST',
        url: '/sendtorobot',
        dataType: 'JSON',
        data: {
          "body": bodymsg,
          "targeturl": targeturl,
          "chat_room": $("#chat_room").val()
        },
        success: function(data){
          $("#message_body").val("");
        },
        error: function(data){
          $("#message_body").val("");
        }
      })
    }
    else{
      var msgdata = {
        "controller": "messages",
        "action": "create",
        "message" : {
          "body" : $("#message_body").val()
        },
        "chat_room" : $("#chat_room").val()
      }
      $.ajax({
        type: 'POST',
        url: '/messages',
        dataType: "JSON",
        data: msgdata,
        success: function(data){
          if(data.success == "1"){
            toastr.options = {
              "closeButton": true,
              "debug": false,
              "newestOnTop": false,
              "progressBar": true,
              "positionClass": "toast-bottom-right",
              "preventDuplicates": false,
              "onclick": null,
              "showDuration": "300",
              "hideDuration": "1000",
              "timeOut": "5000",
              "extendedTimeOut": "1000",
              "showEasing": "swing",
              "hideEasing": "linear",
              "showMethod": "fadeIn",
              "hideMethod": "fadeOut"
            };
            toastr['warning'](data.msg);
          }
          $("#message_body").val("");
        },
        error: function(data){
          $("#message_body").val("");
        }
      })
    }
  })
  $("#msgClear").on('click', function(){
    $("#message_body").val("");
  })
</script>